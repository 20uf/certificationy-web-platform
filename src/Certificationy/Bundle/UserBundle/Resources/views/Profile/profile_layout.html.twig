{% extends '@CertificationyUser/layout.html.twig' %}

{% block fos_user_content %}
    <div class="row">
        <div class="col-md-3 col-lg-3">
            {% if user is not defined %}
                {% if form.vars.value %}
                        {% set user = form.vars.value %}
                {% endif %}
            {% endif %}

            <img style="margin-bottom: 20px;" alt="avatar" title="avatar" src="{{ gravatar(user, 275) }}">
            <div>
                {% block actions %}
                {% endblock actions %}
            </div>
            {{ include('CertificationyUserBundle:Profile/panel:user.html.twig')}}
        </div>
        {% block profile_content %}{% endblock %}
    </div>
{% endblock %}
