{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/user.css') }}" rel="stylesheet" media="screen">
{% endblock %}

{% block container %}
    <div class="container" style="margin-top:30px;">
        {% block content %}
            {% if error is defined and error %}
                {% block error %}
                    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
                {% endblock %}
            {% endif %}

            <div>
                {% block fos_user_content %}
                    <div class="col-md-4 col-md-offset-4">
                        <div class="panel panel-default">
                            <div class="panel-heading"><h3 class="panel-title"><strong>{% block user_panel_title %}{% endblock %}</strong></h3></div>
                            <div class="panel-body">
                                {% block user_panel_content %} {% endblock %}
                            </div>
                        </div>
                    </div>
                {% endblock fos_user_content %}
            </div>
        {% endblock content %}
    </div>
{% endblock container %}
