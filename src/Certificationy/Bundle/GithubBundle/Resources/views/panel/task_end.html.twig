<div class="panel-group" id="{{ inspection.checksum }}">
    {% for name, type in inspection.errors|slice(1) %}
        <div class="panel panel-{{ type|length == 0 ? 'success' : 'danger' }}">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a class="collapsed" data-toggle="collapse" data-parent="#{{ inspection.checksum }}" href="#{{ inspection.checksum ~ '-' ~ name }}">
                        {{ badge(type|length) }} {{ name }}
                    </a>
                </h4>
            </div>

            <div id="{{ inspection.checksum ~ '-' ~ name }}" class="panel-collapse collapse">
                <div class="panel-body">
                    <ul>
                        {% for error in type %}
                        <li>
                            <h4>{{ error.message }}</h4>
                            <p>
                                <ul class="list-unstyled">
                                    <li>File : {{ error.context['file_name'] }}</li>

                                    {% if error.context['discriminator'] is defined %}
                                        <li>{{ label_primary(error.context['discriminator']) }}</li>
                                    {% endif %}
                                </ul>
                            </p>
                        </li>
                        {% else %}
                            <li>Everything is ok :)</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
