namespace :project do
    namespace :database do
        desc 'Init database of certificationy'
        task :init do
            on roles(:db) do
			    invoke 'symfony:console', 'doctrine:database:create'
			    invoke 'symfony:console', 'doctrine:schema:create'
			    invoke 'symfony:console', 'doctrine:mongodb:schema:create'
            end
        end
    end
end