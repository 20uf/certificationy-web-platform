{% block overview_content %}

    {% if certification.metrics.questionCount <= 0 or certification.metrics.answerCount <= 0 %}
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-warning" role="alert">
                    This training will be available soon, we are working on it :)
                </div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-md-6">
            <h3>Settings</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-6">
            <h3>Information</h3>
            <ul>
                <li>Categories : {{ certification.metrics.categoryCount }}</li>
                <li>Questions : {{ certification.metrics.questionCount }}</li>
                <li>Answers : {{ certification.metrics.answerCount }}</li>

                {% if certification.context.availableLanguages|length == 1 %}
                    <li>Language : {{ certification.context.language  }}</li>
                {% endif %}

                {% if certification.context.availableLevels is null %}
                    <li>Level : No level available</li>
                {% endif %}

                <li>Number of question by categories : {{ certification.context.numberOfQuestions }}</li>
            </ul>
        </div>
    </div>
{% endblock overview_content %}



